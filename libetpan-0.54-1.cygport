DESCRIPTION="Mail access library"
HOMEPAGE="http://libetpan.sourceforge.net/libetpan/index.html"
SRC_URI="mirror://sourceforge/libetpan/${P}.tar.gz"

abi=13
PKG_NAMES="${PN} ${PN}${abi} ${PN}-devel"
PKG_HINTS="setup dll devel"
